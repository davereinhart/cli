# Right now we use Flake8 only for a few static checks focusing on runtime
# safety and correctness.  We don't use it for style checks.

[flake8]
select =
    E9,     # syntax errors
    F       # all pyflakes correctness issues

extend-ignore =
    F541    # allow f-strings without any placeholders

exclude =
    .git,
    .venv,
    __pycache__,
    build,
    dist,
